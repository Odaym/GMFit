<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/clinic_address_row_height"
    android:background="@color/white"
    >

  <LinearLayout
      android:id="@+id/parentLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="false"
      android:focusable="true"
      android:gravity="center_vertical"
      android:orientation="vertical"
      android:paddingStart="@dimen/default_margin_2"
      >

    <TextView
        android:id="@+id/clinicNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_margin_1"
        android:textColor="@android:color/black"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/clinicAddressTV"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/default_margin_1"
          android:textColor="@android:color/black"
          android:textSize="12sp"
          />

      <ImageView
          android:layout_width="@dimen/address_icons_indicators_dimens"
          android:layout_height="@dimen/address_icons_indicators_dimens"
          android:layout_marginEnd="@dimen/default_margin_0"
          android:src="@drawable/ic_directory_within_network"
          />

      <ImageView
          android:layout_width="@dimen/address_icons_indicators_dimens"
          android:layout_height="@dimen/address_icons_indicators_dimens"
          android:layout_marginEnd="@dimen/default_margin_0"
          android:src="@drawable/ic_directory_247"
          />

      <ImageView
          android:layout_width="@dimen/address_icons_indicators_dimens"
          android:layout_height="@dimen/address_icons_indicators_dimens"
          android:layout_marginEnd="@dimen/default_margin_0"
          android:src="@drawable/ic_directory_online"
          />

    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/arrowLayout"
      android:layout_width="@dimen/right_arrow_layout_width"
      android:layout_height="match_parent"
      android:layout_alignParentEnd="true"
      android:background="@color/much_lighter_gray"
      android:gravity="center"
      >

    <ImageView
        android:layout_width="@dimen/far_right_arrow_icon_dimens"
        android:layout_height="@dimen/far_right_arrow_icon_dimens"
        android:src="@drawable/ic_arrow_right_blue"
        />
  </LinearLayout>
</RelativeLayout>