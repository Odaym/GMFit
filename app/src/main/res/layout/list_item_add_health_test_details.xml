<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/medical_tests_row_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/default_margin_1"
    >

  <TextView
      android:id="@+id/metricNameTV"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center_vertical|start"
      />

  <EditText
      android:id="@+id/metricValueET"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@null"
      android:gravity="center"
      android:hint="Enter value"
      android:inputType="number"
      android:maxLength="4"
      android:textSize="15sp"
      />

  <Spinner
      android:id="@+id/metricUnitsSpinner"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@null"
      android:gravity="end"
      android:paddingEnd="@dimen/default_margin_1"
      />

</LinearLayout>