<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/noChartsYetTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" android:text="No charts yet!"/>

    <com.mcsaatchi.gmfit.reorderable_listview.DragSortListView
        xmlns:dslv="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chartsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:choiceMode="singleChoice"
        android:dividerHeight="1.0sp"
        android:listSelector="@android:color/transparent"
        dslv:drag_scroll_start="0.02"
        dslv:drag_start_mode="onLongPress"
        dslv:float_alpha="0.3"
        dslv:max_drag_scroll_speed="0.7"
        dslv:slide_shuffle_speed="0.1"/>

</RelativeLayout>