<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/insurance_background"
    android:orientation="vertical"
    >

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      >

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/TransparentToolbar"
        />

  </FrameLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/radiobutton_row_height"
        android:layout_marginBottom="@dimen/default_margin_0"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

      <TextView
          android:layout_width="@dimen/text_input_label_width"
          android:layout_height="match_parent"
          android:background="@color/insurance_transparent_white"
          android:gravity="center_vertical|start"
          android:paddingStart="@dimen/default_margin_2"
          android:text="@string/start_date_input_label"
          android:textAppearance="?android:textAppearanceSmall"
          android:textColor="@android:color/white"
          />

      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/separator_gray"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >

        <TextView
            android:id="@+id/startDateTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/insurance_more_transparent_white"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/default_margin_1"
            android:paddingStart="@dimen/default_margin_1"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_margin_2"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            />
      </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/radiobutton_row_height"
        android:layout_marginBottom="@dimen/default_margin_0"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

      <TextView
          android:layout_width="@dimen/text_input_label_width"
          android:layout_height="match_parent"
          android:background="@color/insurance_transparent_white"
          android:gravity="center_vertical|start"
          android:paddingStart="@dimen/default_margin_2"
          android:text="@string/end_date_input_label"
          android:textAppearance="?android:textAppearanceSmall"
          android:textColor="@android:color/white"
          />

      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/separator_gray"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >

        <TextView
            android:id="@+id/endDateTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/insurance_more_transparent_white"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/default_margin_1"
            android:paddingStart="@dimen/default_margin_1"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_margin_2"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            />
      </RelativeLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
  </LinearLayout>
</LinearLayout>