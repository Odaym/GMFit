<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/medical_tests_row_height"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >

  <TextView
      android:id="@+id/itemNameTV"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:paddingStart="@dimen/activity_vertical_margin"
      android:textColor="@android:color/black"
      />

  <RelativeLayout
      android:layout_width="@dimen/customize_widgets_reorder_list_item_edge_height_width"
      android:layout_height="@dimen/customize_widgets_reorder_list_item_edge_height_width"
      android:layout_alignParentEnd="true"
      android:background="@color/much_lighter_gray"
      android:gravity="center"
      >

    <ImageView
        android:id="@+id/itemIconRightIMG"
        android:layout_width="@dimen/far_right_arrow_icon_dimens"
        android:layout_height="@dimen/far_right_arrow_icon_dimens"
        android:src="@drawable/ic_medical_tests_item_arrow"
        />
  </RelativeLayout>
</RelativeLayout>