<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/headerText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="20dp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      >

    <ImageView
        android:id="@+id/imagePicker1"
        android:layout_width="@dimen/attached_images_dimens"
        android:layout_height="@dimen/attached_images_dimens"
        android:background="@color/offwhite_background_gray"
        android:src="@drawable/ic_photo_camera_white_24dp"
        />

    <ImageView
        android:id="@+id/imagePicker2"
        android:layout_width="@dimen/attached_images_dimens"
        android:layout_height="@dimen/attached_images_dimens"
        android:layout_marginLeft="8dp"
        android:background="@color/offwhite_background_gray"
        android:src="@drawable/ic_photo_camera_white_24dp"
        />

    <ImageView
        android:id="@+id/imagePicker3"
        android:layout_width="@dimen/attached_images_dimens"
        android:layout_height="@dimen/attached_images_dimens"
        android:layout_marginLeft="8dp"
        android:background="@color/offwhite_background_gray"
        android:src="@drawable/ic_photo_camera_white_24dp"
        />

    <ImageView
        android:id="@+id/imagePicker4"
        android:layout_width="@dimen/attached_images_dimens"
        android:layout_height="@dimen/attached_images_dimens"
        android:layout_marginLeft="8dp"
        android:background="@color/offwhite_background_gray"
        android:src="@drawable/ic_photo_camera_white_24dp"
        />

    <ImageView
        android:id="@+id/imagePicker5"
        android:layout_width="@dimen/attached_images_dimens"
        android:layout_height="@dimen/attached_images_dimens"
        android:layout_marginLeft="8dp"
        android:background="@color/offwhite_background_gray"
        android:src="@drawable/ic_photo_camera_white_24dp"
        />
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="20dp"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/offwhite_background_gray"
      />

</LinearLayout>