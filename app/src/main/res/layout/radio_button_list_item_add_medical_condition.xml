<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <View android:layout_width="match_parent" android:layout_height="@dimen/radiobutton_row_height"
          android:background="@color/color_primary_dark_transparent"/>

    <RadioButton
        android:id="@+id/actualRadioBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/default_margin_2"
        android:buttonTint="@android:color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/default_margin_1"
        android:textColor="@android:color/white">

    </RadioButton>
</RelativeLayout>