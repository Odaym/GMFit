<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="@dimen/test_photos_horizontal_scoller_height"
                          android:background="@android:color/darker_gray">

        <LinearLayout
            android:id="@+id/testPhotosLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/activity_vertical_margin" android:paddingStart="@dimen/activity_vertical_margin">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_marginEnd="@dimen/activity_vertical_margin"
                          android:gravity="center"
                          android:orientation="vertical">

                <Button android:id="@+id/addNewPhotoTestBTN" android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@android:drawable/ic_input_add"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Add Photo"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>