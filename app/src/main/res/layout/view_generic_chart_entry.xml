<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView android:id="@+id/entryTitleTV" android:layout_width="350dp"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:textAppearance="?android:textAppearanceMedium"
              android:textStyle="bold"/>

    <TextView android:id="@+id/entryDescriptionTV" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/entryTitleTV"/>

    <TextView android:id="@+id/entryUnitsTV" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"/>
</RelativeLayout>