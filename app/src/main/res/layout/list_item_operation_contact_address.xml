<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/profile_blue"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/default_margin_2"
      >

    <TextView
        android:id="@+id/addressLabelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addresses"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white"
        />

  </LinearLayout>

  <TextView
      android:id="@+id/addressesValueTV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/activity_vertical_margin"
      android:textAppearance="?android:textAppearanceMedium"
      android:textColor="@android:color/black"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/profile_blue"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/default_margin_2"
      >

    <TextView
        android:id="@+id/phoneNumbersLabelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Numbers"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white"
        />

  </LinearLayout>


  <android.support.v7.widget.RecyclerView
      android:id="@+id/phoneNumbersRecycler"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      />
</LinearLayout>