<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardLayoutContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius" app:cardUseCompatPadding="true">


    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView android:id="@+id/chartTitleTV" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:textAppearanceLarge"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/chartTitleTV"/>

        <Button
            android:id="@+id/removeChartBTN"
            android:layout_width="@dimen/remove_chart_button_dimens"
            android:layout_height="@dimen/remove_chart_button_dimens"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="x"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>