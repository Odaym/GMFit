<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:id="@+id/chooseLifestyleHintTV"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/default_margin_2"
              android:layout_marginStart="@dimen/default_margin_2_5"
              android:fontFamily="sans-serif-light"
              android:text="@string/choose_lifestyle_hint"
              android:textColor="@android:color/white"/>

    <worker8.com.github.radiogroupplus.RadioGroupPlus
        android:id="@+id/activityLevelsRadioButtonsGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chooseLifestyleHintTV"
        android:orientation="vertical">

    </worker8.com.github.radiogroupplus.RadioGroupPlus>
</RelativeLayout>
