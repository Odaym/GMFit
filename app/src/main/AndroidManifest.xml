<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mcsaatchi.gmfit"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature
        android:name="android.hardware.sensor.stepcounter"
        android:required="true"/>

    <application
        android:name=".architecture.GMFit_Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".onboarding.activities.Splash_Activity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/No_Status_Or_Action_Bar_Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".onboarding.activities.Main_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing"/>
        <activity
            android:name=".onboarding.activities.Login_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Status_Or_Action_Bar_Theme"/>
        <activity
            android:name=".onboarding.activities.SignUp_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".onboarding.activities.SignIn_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".onboarding.activities.ForgotPassword_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".onboarding.activities.ResetPassword_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateVisible"/>
        <activity
            android:name=".profile.activities.TOS_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"/>
        <activity
            android:name=".onboarding.activities.AccountVerification_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Status_Or_Action_Bar_Theme"
            android:windowSoftInputMode="stateVisible|adjustPan"/>
        <activity
            android:name=".onboarding.activities.SetupProfile_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".common.activities.CustomizeWidgetsAndCharts_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"/>
        <activity
            android:name=".nutrition.activities.AddNewMealItem_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".nutrition.activities.AddNewMealOnDate_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".health.activities.AddNewHealthTest_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".health.activities.AddNewHealthTest_Part2_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".nutrition.activities.SpecifyMealAmount_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".nutrition.activities.BarcodeCapture_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"/>
        <activity
            android:name=".common.activities.AddNewChart_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"/>
        <activity
            android:name=".profile.activities.MetaTexts_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"/>
        <activity
            android:name=".profile.activities.Reminders_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"/>
        <activity
            android:name=".common.activities.SlugBreakdown_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"/>
        <activity
            android:name=".profile.activities.ContactUs_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"/>
        <activity
            android:name=".insurance.activities.Claim_Reimbursement_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"/>
        <activity
            android:name=".insurance.activities.Submit_Reimbursement_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/No_Action_Bar_Theme"
            android:windowSoftInputMode="adjustPan"/>

        <receiver android:name=".common.classes.AlarmReceiver"/>
        <receiver android:name=".fitness.pedometer.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service android:name=".fitness.pedometer.SensorListener"/>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="36e136351325660be3ac92f428de565fcbdc3033"/>

    </application>

</manifest>